{
  "uuid": "f1b2c3d4-e5f6-4789-9a1b-0c2d3e4f5a66",
  "name": "Scan URL",
  "description": "Submit a URL for scanning to Google Threat Intelligence (VirusTotal)",
  "docker_parameters": "scan_url",
  "arguments": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "url": {
        "type": "string",
        "description": "URL to scan"
      }
    },
    "required": ["url"]
  },
  "results": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Scan URL Results",
    "properties": {
      "success": { "type": "boolean" },
      "data": {
        "type": "object",
        "description": "VirusTotal Analysis object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique ID of the analysis"
          },
          "type": {
            "type": "string",
            "enum": ["analysis"],
            "description": "Object type"
          },
          "links": {
            "type": "object",
            "properties": {
              "self": {
                "type": "string",
                "description": "API path to retrieve this analysis"
              }
            },
            "required": ["self"]
          },
          "attributes": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "description": "Analysis status"
              },
              "date": {
                "type": ["integer", "null"],
                "description": "Timestamp of the analysis"
              },
              "stats": {
                "type": ["object", "null"],
                "properties": {
                  "harmless": { "type": "integer" },
                  "malicious": { "type": "integer" },
                  "suspicious": { "type": "integer" },
                  "undetected": { "type": "integer" },
                  "timeout": { "type": "integer" }
                },
                "required": ["harmless", "malicious", "suspicious", "undetected", "timeout"]
              },
              "results": {
                "type": ["object", "null"],
                "description": "Per-engine scanning results"
              }
            },
            "required": ["status"]
          }
        },
        "required": ["id", "type", "attributes"]
      }
    }
  },
  "slug": "scan_url_in_gti"
}
